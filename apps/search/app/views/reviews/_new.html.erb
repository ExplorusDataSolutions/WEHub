<%= form_for :review, :url => { :controller => 'review', :action => 'create' } do |f| -%>
  <table style="border-spacing: 0px;">
    <tr>
      <td colspan="2">
        <table style="border-spacing: 0px;">
          <tr>
            <td>
  How do you rate this dataset?
            </td>
            <td>
  <section class="rating-container" style="display: inline;">
  <% 5.times do |i| %>
    <%= radio_button "review", "rating", i+1 -%>
  <% end %>
  </section>
            </td>
          </tr>
        </table>
      </td>
    </tr>
    <tr>
      <td style="vertical-align: top; text-align: right;">
  <%= f.label :comments, 'Enter your review' -%>
      </td>
      <td>
  <%= f.text_area :comments, :size => '45x11' -%>
      </td>
    </tr>
  </table> 
<% end %>
