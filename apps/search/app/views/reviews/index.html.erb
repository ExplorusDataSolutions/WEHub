<% if @reviews %>
  <% @reviews.each do |review| %>
<div class="review">
  <section class="rating-container">
  <% 5.times do |i| %>
    <%= radio_button("review[#{review.id}]", 'rating', i+1, { :checked => (i+1 == review.rating) }) %>
  <% end %>
  </section>
  <div class="clear"></div>
  <% if review.comments %>
  <span class="comments"><%= review.comments %></span> - 
  <% end %>
  <% if review.user %>
  <span class="user"><%= link_to_if(!review.user.nil?, review.user.name, { :controller => 'user', :action => 'profile', :id => review.user_id }) %></span>,
  <% end %>
  <span class="date"><%= review.created_at %></span>
</div>
  <% end %>
<% end %>
