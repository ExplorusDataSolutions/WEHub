<table class="search-result">
<% @search.results.each do |result| %>  
  <tr>
    <td><input type='checkbox' name='download' value='<%= result.id %>' /></td>
    <td>      
      <a href="/#!/<%= result.id %>" onclick="return false;"><%= result.title %></a><br />
      <%= result.publication_date %> ... <%= result.description %><br />
      <% if !result.relations.nil? %>
        Related results:
        <select>
        <% result.relations.each do |related_result| %>
          <option><%= related_result.title %></option>
        <% end %>
        </select>
      <% end %>
    </td>
  </tr>
<% end %>  
</table>