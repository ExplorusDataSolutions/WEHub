<style>
#sign-in label {
  display: block;
  width: 100px;  
}
#sign-in input {
  display: block;
  position: relative;
  top: -24px;
  left: 100px;
}
</style>
<% if @user.errors.any? %>  
<div id="error-explanation">  
  <ul>  
  <% @user.errors.full_messages.each do |msg| %>  
    <li><%= msg %></li>  
  <% end %>  
  </ul>  
</div>  
<% end %>  

<%= form_for :user, :html => { :id => 'sign-in' } do |f| %>
  <%= f.label :login %><%= f.text_field :login %>
  <%= f.label :password %><%= f.password_field :password %>
  <%= f.submit :"Sign-in" %>
<% end %>
