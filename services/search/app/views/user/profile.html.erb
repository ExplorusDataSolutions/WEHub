<div class="profile-left-box">
	<div class="profile-left-head">
		<span>Welcome </span>
		<span class="head-name"><%= @profile.login.capitalize %></span>
	</div>
	<div class="clear"></div>
	<table width="100%" cellpadding="5">
		<tr>
			<td align="left" width="25%">
				Name:
			</td>
			<td align="left" class="font-bold" width="75%" >
				<%= "#{@profile.first_name.capitalize} #{@profile.last_name.capitalize}"  %>
			</td>
		</tr>
		<tr>
			<td align="left">
				Email:
			</td>
			<td align="left">
        <%= @profile.email %>
			</td>
		</tr>
		<tr>
			<td align="left">
				Organization:
			</td>
			<td align="left" class="font-bold">
				<%= link_to @profile.organization, @profile.company_url  %>
			</td>
		</tr>
		<tr>
			<td align="left" valign="top">
				Friends:
			</td>
			<td align="left">
				<% for i in 1..7%>
				<div class="profile-left-friends-list">
					<img src="/images/friend-small-thumb.jpg" alt="Friends" title="Friends" border="0" />
				</div>
				<% end%>
<%
=begin %>
				<div class="profile-left-friends-list-more">
					+<br />More
				</div>
<%
=end %>
			</td>
		</tr>
		<tr>
			<td align="left">
				Groups:
			</td>
			<td align="left" class="font-bold">
				ikreates
			</td>
		</tr>
		<tr>
			<td align="left">
				Dataset:
			</td>
			<td align="left" class="font-bold">
				ip3
			</td>
		</tr>
	</table>
</div>
<div class="profile-right-container">
	<div class="profile-tab-container">
		<div class="profile-tab profile-tab-select">
			Info
		</div>
		<div class="profile-tab">
			Wall
		</div>
	</div>
	<div class="clear"></div>
	<div class="profile-content-container">
		<div class="profile-image-box">
			<img src="/images/temp-profile-image.jpg" title="Profile Image" alt="Profile Image" border="0" />
		</div>
		<div class="profile-content-details">
			<div class="profile-title-head">
				<%= "#{@profile.first_name.capitalize} #{@profile.last_name.capitalize}"  %>
			</div>
			<div class="float-right">
				<a href="#">
					<img src="/images/edit-profile-button.jpg" alt="Edit Profile" title="Edit Profile" border="0" />
				</a>
			</div>
			<div class="clear"></div>
<%
=begin %>
			<div class="calendar-text profile-label">Born on August 25, 1984</div>
<%
=end %>
			<div class="marker-text profile-label">Lives in <%= "#{@profile.state} #{@profile.country}" %> </div>
			<div class="clear"></div>
<% 
=begin %>
      <div class="profile-text profile-label">Working in Karachi</div>
<%
=end %>
			<div class="mobile-text profile-label"><%= @profile.phone %></div>
			<div class="clear"></div>
			<div class="message-text profile-label"><%= @profile.email %></div>
			<div class="clear"></div>
<% 
=begin %>
			<div class="speak-text profile-label">English, Punjabi, Urdu</div>
			<div class="clear"></div>
<%
=end %>
			<div class="profile-sub-head">
				<div class="float-left">
					About me
				</div>
				<div class="float-right">
					<a href="#">
						<img src="/images/edit-small-button.jpg" alt="edit" title="edit" border="0" />
					</a>
				</div>
			</div>
			<div class="profile-content-para">
        <%= @profile.about_me %>
			</div>
			<div class="clear"></div>
			<div class="profile-sub-head">
				<div class="float-left">
					Skills
				</div>
				<div class="float-right">
					<a href="#">
						<img src="/images/edit-small-button.jpg" alt="edit" title="edit" border="0" />
					</a>
				</div>
			</div>
			<div class="profile-content-para">
        <%= @profile.skills %>
			</div>
			<div class="clear"></div>
<%
=begin %>			
			<div class="profile-sub-head">
				<div class="float-left">
					Interests:
				</div>
				<div class="float-right">
					<a href="#">
						<img src="/images/edit-small-button.jpg" alt="edit" title="edit" border="0" />
					</a>
				</div>
			</div>
			<div class="profile-content-para">
        Interest content				 
			</div>
<%
=end %>
			<div class="clear"></div>
			<div class="profile-sub-head">
				<div class="float-left">
					Friends:
				</div>
				<div class="float-right">
					<a href="#">
						<img src="/images/edit-small-button.jpg" alt="edit" title="edit" border="0" />
					</a>
				</div>
			</div>
			<div class="profile-content-para">
        <% @friends.each do |friend| %>

				<div class="profile-friend-each">
					<div class="float-left">
						<img src="/images/friends/ruby.jpg" title="Friend" alt="Friend" border="0"/>
					</div>
					<div class="text">
						<div><%= "#{friend.first_name.capitalize} #{friend.last_name.capitalize}" %></div>
						<div><%= friend.datasets.nil? ? '0' : friend.datasets.count %> datasets</div>
					</div>
				</div>

        <% end %>								
			</div>
		</div>
		<div class="clear"></div>
	</div>
	<div class="clear"></div>
</div>
<div class="clear"></div>
