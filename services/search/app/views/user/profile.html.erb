<%= render '/shared/left_panel' %>

<div class="profile-right-container">
	<div class="profile-tab-container">
		<div class="profile-tab profile-tab-select">
			Info
		</div>
<%
=begin %>
		<div class="profile-tab">
			Wall
		</div>
<% 
=end %>
	</div>
	<div class="clear"></div>
	<div class="profile-content-container">
		<div class="profile-image-box">
			<img src="/images/temp-profile-image.jpg" title="Profile Image" alt="Profile Image" border="0" />
		</div>
		<div class="profile-content-details">
			<div class="profile-title-head">
				<%= @profile.name  %>
			</div>
			<div class="float-right">
				<a href="#">
					<img src="/images/edit-profile-button.jpg" alt="Edit Profile" title="Edit Profile" border="0" />
				</a>
			</div>
			<div class="clear"></div>
<%
=begin %>
			<div class="calendar-text profile-label">Born on August 25, 1984</div>
<%
=end %>
			<div class="marker-text profile-label">Lives in <%= "#{@profile.state} #{@profile.country}" %> </div>
			<div class="clear"></div>
<% 
=begin %>
      <div class="profile-text profile-label">Working in Karachi</div>
<%
=end %>
			<div class="mobile-text profile-label"><%= @profile.phone %></div>
			<div class="clear"></div>
			<div class="message-text profile-label"><%= @profile.email %></div>
			<div class="clear"></div>
<% 
=begin %>
			<div class="speak-text profile-label">English, Punjabi, Urdu</div>
			<div class="clear"></div>
<%
=end %>
			<div class="profile-sub-head">
				<div class="float-left">
					About me
				</div>
				<div class="float-right">
					<a href="javascript:void(0);" onclick="javascript:profile_about_me_edit();">
						<img src="/images/edit-small-button.jpg" alt="edit" title="edit" border="0" />
					</a>
				</div>
				<div class="clear"></div>
				
			</div>
			<div id="about-me-edit" class="profile-edit-para-div" style="display:none;">
				<div class="textarea-plain-left"></div>
				<div class="textarea-plain-repeat-280">
					<textarea><%= @profile.about_me %></textarea>
				</div>
				<div class="textarea-plain-right"></div>
				<div class="button-div">
					<span class="button">
						<button>Save</button>
					</span>
				</div>
			</div>
			<div id="about-me-content" class="profile-content-para">
        <%= @profile.about_me %>
			</div>
			<div class="clear"></div>
			<div class="profile-sub-head">
				<div class="float-left">
					Skills
				</div>
				<div class="float-right">
					<a href="javascript:void(0);" onclick="javascript:profile_skills_edit();">
						<img src="/images/edit-small-button.jpg" alt="edit" title="edit" border="0" />
					</a>
				</div>
			</div>
			<div id="skills-edit" class="profile-edit-para-div" style="display:none;">
				<div class="textarea-plain-left"></div>
				<div class="textarea-plain-repeat-280">
					<textarea><%= @profile.skills %></textarea>
				</div>
				<div class="textarea-plain-right"></div>
				<div class="button-div">
					<span class="button">
						<button>Save</button>
					</span>
				</div>
			</div>
			<div id="skills-content" class="profile-content-para">
        <%= @profile.skills %>
			</div>
			<div class="clear"></div>
<%
=begin %>			
			<div class="profile-sub-head">
				<div class="float-left">
					Interests:
				</div>
				<div class="float-right">
					<a href="#">
						<img src="/images/edit-small-button.jpg" alt="edit" title="edit" border="0" />
					</a>
				</div>
			</div>
			<div class="profile-content-para">
        Interest content				 
			</div>
<%
=end %>
			<div class="clear"></div>
			<div class="profile-sub-head">
				<div class="float-left">
					Friends:
				</div>
				<div class="float-right">
					<a href="#">
						<img src="/images/edit-small-button.jpg" alt="edit" title="edit" border="0" />
					</a>
				</div>
			</div>
			<div class="profile-content-para">

        <% 
		if @profile.friend 
			friends_cnt		=	1
		%>
          <% @profile.friend.each do |friend| %>
				  <div id="profile-friend-<%= friends_cnt%>" class="profile-friend-each">
					  <div class="float-left">
						  <img src="/images/friends/ruby.jpg" title="Friend" alt="Friend" border="0"/>
					  </div>
					  <div class="text">
						  <div><%= friend.name %></div>
						  <div><%= friend.datasets.nil? ? '0' : friend.datasets.count %> datasets</div>
					  </div>
					  <div class="close">
					  	<a href="javascript:void(0);" onclick="javascript:close_friends(<%= friends_cnt%>)">X</a>
					  </div>
				  </div>
          <% 
			friends_cnt		+=	1
			end %>
        <% end %>

			</div>
		</div>
		<div class="clear"></div>
	</div>
	<div class="clear"></div>
</div>
<div class="clear"></div>
